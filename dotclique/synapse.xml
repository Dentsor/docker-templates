<?xml version="1.0"?>
<Container version="3">
    <TemplateURL>https://raw.githubusercontent.com/dotclique/docker-templates/master/dotclique/synapse.xml</TemplateURL>
    <Date>2023-12-14</Date>
    <Beta>False</Beta>
    <Name>Wireguard</Name>
    <Project>https://www.wireguard.com/</Project>
    <Repository>matrixdotorg/synapse</Repository>
    <Network>host</Network>
    <Privileged>false</Privileged>
    <Overview>Matrix Synapse</Overview>
    <Description>
https://hub.docker.com/r/matrixdotorg/synapse
    </Description>
    <Category>Network:Chat:</Category>
    <Networking>
        <Mode>bridge</Mode>
        <Publish>
            <Port>
                <HostPort>8008</HostPort>
                <ContainerPort>8008</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
        </Publish>
    </Networking>
    <Environment>
        <Variable>
            <Name>PUID</Name>
            <Value>1000</Value>
        </Variable>
        <Variable>
            <Name>PGID</Name>
            <Value>1000</Value>
        </Variable>
        <Variable>
            <Name>TZ</Name>
            <Value>Etc/UTC</Value>
        </Variable>
        <Variable>
            <Name>SYNAPSE_SERVER_NAME</Name>
            <Value>domainname.example</Value>
        </Variable>
        <Variable>
            <Name>SYNAPSE_REPORT_STATS</Name>
            <Value>no</Value>
        </Variable>
        <Variable>
            <Name>SYNAPSE_HTTP_PORT</Name>
            <Value>8008</Value>
        </Variable>
    </Environment>
    <Data>
        <Volume>
            <HostDir>/mnt/user/appdata/synapse</HostDir>
            <ContainerDir>/data</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
    </Data>
</Container>
